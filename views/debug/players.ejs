<!DOCTYPE html>
<html>
  <head>
    <title>debug</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="header-debug">
      <% include header %>
    </div>
    <div class="container">
      <ul style="padding-left: 10px;">
        <% for (var i=0; i < players.length; i++) { %>
        <li style="list-style:none; margin-bottom:5px;">
          <div style="float:left;"><%= players[i].id %>:<%= players[i].group %>:<%= players[i].fullName %></div>
          <div style="float:left; margin-left: 5px;">
          <form action="/skdebug/player" method="POST">
            <input type="hidden" name="gid" value="<%= players[i].group %>"> 
            <input type="hidden" name="id" value="<%= players[i].id %>"> 
            <input type="submit" value="更新">
          </form>
          </div>
          <div style="float:left; margin-left: 5px;">
          <form action="/skdebug/player_comment" method="POST">
            <input type="hidden" name="gid" value="<%= players[i].group %>"> 
            <input type="hidden" name="id" value="<%= players[i].id %>"> 
            <input type="submit" value="comment">
          </form>
          </div>
          <div style="float:left; margin-left: 5px;">
          <form action="/skdebug/delete_player" method="POST">
            <input type="hidden" name="gid" value="<%= players[i].group %>"> 
            <input type="hidden" name="id" value="<%= players[i].id %>"> 
            <input type="submit" value="削除">
          </form>
          </div>
          <div style="clear: both"></div>
        </li>
        <% } %>
      </ul>
    </div>
    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="http://underscorejs.org/underscore-min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
